---
import { PortableText } from "astro-portabletext";
import InlineLink from "../InlineLink.astro";
import ImageBlock from "../ImageBlock.astro";
import FileBlock from "../FileBlock.astro";
import FormBlock from "../FormBlock.astro";
import LinkCollectionBlock from "../LinkCollectionBlock.astro";

interface Props {
    content: any[]
}

const components = {
  mark: {
    externalLink: InlineLink,
    internalLink: InlineLink,
  },
  type: {
      imageBlock: ImageBlock,
      fileBlock: FileBlock,
      formBlock: FormBlock,
      linkCollectionBlock: LinkCollectionBlock,
  },
};

const { content } = Astro.props;
---

<PortableText value={content} components={components} />
