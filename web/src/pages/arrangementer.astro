        <div class="l-event-archive__tabs">
          <button class="l-event-archive__tab |" id="nextEventsToggle">Kommende</button>
          <button class="l-event-archive__tab active" id="prevEventsToggle">Avholdte</button>
        </div>
        <div class="l-event-archive__events">
          <EventCard
            title={"Årsmøte"}
            text={"Velkommen til årets første årsmøte"}
